<!DOCTYPE html>
<html lang="pt-br">

<head>
  <title>Título da página</title>
  <meta charset="utf-8">
  <script>

    let q1 = prompt('Seu animal é vertebrado ou invertebrado? (Responda com 1 e 2, respectivamente)')
    let q2;
    let q3;
    let animal;

    if (q1 == 1 || q1 == 2) {

      if (q1 == 1) {

        q2 = prompt('Seu animal é uma ave ou um mamífero? (Responda com 1 e 2, respectivamente)')

        if (q2 == 1 || q1 == 2) {

          if (q2 == 1) {

            q3 = prompt('Seu animal é carnívoro ou onívoro? (Responda com 1 e 2, respectivamente)')

            if (q3 == 1 || q3 == 2)
              if (q3 == 1) {
                animal = 'Águia'
            }
              if (q3 == 2) {
                animal = 'Pomba'
            }

          }

          if (q2 == 2) {

            q3 = prompt('Seu animal é onívoro ou herbivoro? (Responda com 1 e 2, respectivamente)')

            if (q3 == 1 || q3 == 2) {
              if (q3 == 1) {
                animal = 'Homem'
              }
              if (q3 == 2) {
                animal = 'Vaca'
              }
            }
          }


        } else {
          alert('Digite um valor válido.')
          return
        }
      }

    } else {
      alert('Digite um valor válido.')
      return
    }
    
  </script>
