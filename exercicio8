<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <title>Título da página</title>
    <meta charset="utf-8">
    <script>

        let salario = parseFloat(prompt('Qual é o valor do seu salário?'))

        if (salario <= 400) {
            let reajuste = salario * 0.15
            let novoSalario = salario + reajuste
            let percentual = '15%'
            document.write(`Novo salário: ${novoSalario} <br>Reajuste ganho: ${reajuste} <br>Em percentual: ${percentual}`)  
        }

        if (salario > 400 && salario <= 800) {
            let reajuste = salario * 0.12
            let novoSalario = salario + reajuste
            let percentual = '12%'
            document.write(`Novo salário: ${novoSalario} <br>Reajuste ganho: ${reajuste} <br>Em percentual: ${percentual}`)  
        }

        if (salario > 800 && salario <= 1200) {       
            let reajuste = salario * 0.10
            let novoSalario = salario + reajuste
            let percentual = '10%'
            document.write(`Novo salário: ${novoSalario} <br>Reajuste ganho: ${reajuste} <br>Em percentual: ${percentual}`)  
        }

        if (salario > 1200 && salario <= 2000) {          
            let reajuste = salario * 0.07
            let novoSalario = salario + reajuste
            let percentual = '7%'
            document.write(`Novo salário: ${novoSalario} <br>Reajuste ganho: ${reajuste} <br>Em percentual: ${percentual}`)  
        }
     
        if (salario > 2000) {
            let reajuste = salario * 0.04
            let novoSalario = salario + reajuste
            let percentual = '4%'
            document.write(`Novo salário: ${novoSalario} <br>Reajuste ganho: ${reajuste} <br>Em percentual: ${percentual}`)  
        }

    </script>
  </head>
  <body>
    
  </body>
</html>
